.home
  = image_tag("/top_image/top.png", class: "top-image")
  .popular-category
    .popular-category__title
      人気のカテゴリー
  .item-lists
    .item-lists__head
      .item-lists__head__title
        出品一覧
      .item-lists__head__more-link
        = link_to "#" do
          もっと見る
          = icon 'fas', 'angle-right'
    %ul.item-lists__items
      - @items.zip(@item_images).each do |item, item_image|
        = render partial: "list", locals: {item: item, item_image: item_image}
        
= render "shared/sell_button"
