.item-show-page
  = render 'item', { item: @item }
  = render 'comment'
  .introduction-item-container
    = link_to "#", class: "blue-link" do
      .introduction-item-container__left
        = icon 'fas', 'angle-left'
        左のアイテム
    = link_to "#", class: "blue-link" do
      .introduction-item-container__right
        右のアイテム
        = icon 'fas', 'angle-right'
  .sns-container
    .sns-container__icon
      = link_to "#" do
        = icon 'fab', 'facebook-square', class: "sns-container__icon--facebook"
      = link_to "#" do
        = icon 'fab', 'twitter-square', class: "sns-container__icon--twitter"
      = link_to "#" do
        = icon 'fab', 'pinterest-square', class: "sns-container__icon--pinterest"
  .other-item-container
    = link_to "#", class:"other-item-container__title blue-link" do
      = @item.user.nickname + "さんのその他の商品"
    .other-item-container__items
      - @items.each do |item|
        .other-item-container__items__item
          = link_to item_path(item), class: "item-link" do
            - if item.status == 1
              .sold-out
                .sold-out__string
                  SOLD
            = image_tag item.item_images[0].image.to_s, class: "other-item-container__items__item__image"
            .other-item-container__items__item__explain
              .other-item-container__items__item__explain__title
                = item.name
              .other-item-container__items__item__explain__bottom
                .other-item-container__items__item__explain__bottom__price
                  = comma_to_jpy(item.price)
                .other-item-container__items__item__explain__bottom__likes
                  = icon 'far', 'heart'
                  いいね