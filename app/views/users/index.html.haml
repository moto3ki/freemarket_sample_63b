%nav.bread-crumbs
  - breadcrumb :mypage
  = breadcrumbs separator: " &#12297; "
%main.user-mypage-top
  .l-container.clearfix
    = render "shared/side_bar"
    .l-content
      .mypage-user
        .mypage-user__link
          = link_to  user_path(current_user), class: "user-link" do
            %img.mypage-user__link__icon
            .mypage-user__link__name.blue-link
              = current_user.nickname
            .mypage-user__link__rating
              .mypage-user__link__rating--left
                評価
                %span.left-count
                  0
              .mypage-user__link__rating--right
                出品数
                %span.right-count
                  = current_user.items.count
      .information
        %ul.information__tabs
          %li.information__tabs__btn.active
            %a
              お知らせ
          %li.information__tabs__btn
            %a
              やることリスト
        .content
          %ul.content__list.active
            = render 'users/notice_todo/list', { notices_todoes: @notices, path: "notices" }
            %li.all-show
              = link_to  notices_users_path, class: "all-show-btn" do
                一覧を見る
          %ul.content__list
            = render 'users/notice_todo/list', { notices_todoes: @todolists, path: "todolists" }
            %li.all-show
              = link_to  todolists_users_path, class: "all-show-btn" do
                一覧を見る
      .buy-item
        .buy-item__title
          購入した商品
        %ul.buy-item__tabs
          %li#buying-tab.buy-item__tabs__btn.active-2
            %a.buying-btn
              取引中
          %li#buyed-tab.buy-item__tabs__btn
            %a.buyed-btn
              過去の取引
        .buy-item__content
          %ul#buying-list.buy-item__content__list.active-2
            = render 'users/buy_item/list', { purchases: @purchasing }
            %li.all-show
              = link_to  buying_items_users_path, class: "all-show-btn" do
                一覧を見る
          %ul#buyed-list.buy-item__content__list
            = render 'users/buy_item/list', { purchases: @purchased }
            %li.all-show
              = link_to  bought_items_users_path, class: "all-show-btn" do
                一覧を見る