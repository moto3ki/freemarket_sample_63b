.signup-container
  =render 'shared/sub-header'
  
  %main.signup-main
    .login-panel
      .login-panel__no-acount
        %p アカウントをお持ちでない方はこちら
        = link_to "新規会員登録", new_registration_path(resource_name),class: "login-panel__no-acount__btn"

      .login-form__insert
        .login-inner
          .login-btn
            %button#facebook.btn-default.btn-sns.btn-sns-facebook
              %i.fab.fa-facebook-square.facebook-icon
              Facebookでログイン
            %button#Google.btn-default.btn-sns.btn-sns-google
              %i.fab.fa-google.google-icon
              Googleでログイン
      
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .login-inner
            .form-group
              = f.email_field :email, autofocus: "off", placeholder: 'メールアドレス', class: "input-default"
            .form-group
              = f.password_field :password, autocomplete: "off",placeholder: 'パスワード', class: "login-input-text input-default"
            .login-actions
              = f.submit "Log in",class: "login-submit btn-default btn-red"
              = link_to "#",class:"forget-password" do
                パスワードをお忘れの方

  =render 'shared/sub-footer'