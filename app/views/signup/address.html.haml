.signup-container
  .signup-main
    .signup-panel
      %h2.signup-panel__title 発送元・お届け先住所入力
      = form_with(model: @user,url: signup_index_path,local: true, method: :post) do |f|
        =f.fields_for :send_address do |s|
          .signup-panel__insert
            .signup-inner
              .signup-form
                .signup-form__label お名前
                %span.require 必須
                = s.text_field :kanji_last_name, class:"input-default", placeholder: "例) 山田"
                = s.text_field :kanji_first_name, class:"input-default", placeholder: "例) 彩"
              .signup-form
                .signup-form__label お名前カナ
                %span.require 必須
                = s.text_field :kana_last_name, class:"input-default", placeholder:"例) ヤマダ"
                = s.text_field :kana_first_name, class:"input-default", placeholder:"例）アヤ"
              .signup-form
                .signup-form__label  郵便番号
                %span.require 必須
                = s.text_field  :post_code, class:"input-default", placeholder:"例)123-4567"
              .signup-form
                .signup-form__label 都道府県
                %span.require 必須
                = s.text_field :prefectures, class:"input-default", placeholder: "例) 神奈川県"
              .signup-form
                .signup-form__label 市区町村
                %span.require 必須
                = s.text_field :city, class:"input-default", placeholder: "例) 横浜市緑区"
              .signup-form
                .signup-form__label 番地
                %span.require 必須
                = s.text_field :address, class:"input-default", placeholder: "例) 青山1-1-1"
              .signup-form
                .signup-form__label 建物名
                %span.arbitrary 任意
                = s.text_field :building_name, class:"input-default", placeholder: "例) 柳ビル103"
              .signup-form
                .signup-form__label 電話
                %span.arbitrary 任意
                = s.text_field :tel_no, class:"input-default", placeholder: "例) 09012345678"
              .signup-form
                .signup-form
                = f.submit "次へ進む", class: 'signup-btn--red'  
