%nav.bread-crumbs
  - breadcrumb :real_address
  = breadcrumbs separator: " &rsaquo; "
%main.l-container.clearfix
  .l-content
    %section.l-chapter-container.mypage-identification
      %h2.l-chapter-head
        発送元・お届け先住所入力
        = form_with(model: @send_address, url: user_send_address_index_path(current_user), method: :POST, local: true) do |f|
          .signup-panel__insert
            .signup-inner
              .signup-form
                .signup-form__label お名前
                %span.require 必須
                = f.text_field :kanji_last_name, class:"input-default", placeholder: "例) 山田"
                = f.text_field :kanji_first_name, class:"input-default", placeholder: "例) 彩"
              .error-text
              - @send_address.errors.full_messages_for(:kanji_last_name).each do |message|
                %div
                  = message
              .error-text
              - @send_address.errors.full_messages_for(:kanji_first_name,).each do |message|
                %div
                  = message
              .signup-form
                .signup-form__label お名前カナ
                %span.require 必須
                = f.text_field :kana_last_name, class:"input-default", placeholder:"例) ヤマダ"
                = f.text_field :kana_first_name, class:"input-default", placeholder:"例）アヤ"
              .error-text
              - @send_address.errors.full_messages_for(:kana_first_name,).each do |message|
                %div
                  = message
              .error-text
              - @send_address.errors.full_messages_for(:kana_first_name,).each do |message|
                %div
                  = message
              .signup-form
                .signup-form__label  郵便番号
                %span.require 必須
                = f.text_field  :post_code, class:"input-default", placeholder:"例)123-4567"
              .error-text
              - @send_address.errors.full_messages_for(:post_code,).each do |message|
                %div
                  = message
              .signup-form
                .signup-form__label 都道府県
                %span.require 必須
                .signup-form__label__pull_down
                  = f.collection_select :prefecture_id, Prefecture.all, :id, :name,{prompt: ""}, class: "pull_down"
              .error-text
              - @send_address.errors.full_messages_for(:prefecture_id).each do |message|
                %div
                  = message
              .signup-form
                .signup-form__label 市区町村
                %span.require 必須
                = f.text_field :city, class:"input-default", placeholder: "例) 横浜市緑区"
              .error-text
              - @send_address.errors.full_messages_for(:city).each do |message|
                %div
                  = message
              .signup-form
                .signup-form__label 番地
                %span.require 必須
                = f.text_field :address, class:"input-default", placeholder: "例) 青山1-1-1"
              .error-text
              - @send_address.errors.full_messages_for(:address).each do |message|
                %div
                  = message
              .signup-form
                .signup-form__label 建物名
                %span.arbitrary 任意
                = f.text_field :building_name, class:"input-default", placeholder: "例) 柳ビル103"
              .signup-form
                .signup-form__label 電話
                %span.arbitrary 任意
                = f.text_field :tel_no, class:"input-default", placeholder: "例) 09012345678"
      
          = f.submit "変更する", class: "btn-default btn-red"
  = render partial: "shared/side_bar"